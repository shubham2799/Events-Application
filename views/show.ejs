<%- include("./partials/header") %>

<div class="container">
	<div class="center event">

			<div class="border my-4 p-3">
				<h5><%= event.title %></h5>
				<hr>
				<div class="row">
					<div class="col-md-6 border-right">
						<h6>Event Type</h6>
						<p class="mb-0"><%= event.type %></p>
						<hr class="d-md-none">
					</div>
					<div class="col-md-6">
						<h6>Venue</h6>
						<p class="mb-0"><%= event.venue %></p>
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-md-6 border-right">
						<h6>Date</h6>
						<p class="mb-0"><%= event.date %></p>
						<hr class="d-md-none">
					</div>
					<div class="col-md-6">
						<h6>Time</h6>
						<p class="mb-0"><%= event.time %></p>
					</div>
				</div>
				<hr>
				<% if(event.description.length>0){ %>
					<h6>Description</h6>
					<p><%= event.description %></p>
					<hr>
				<% } %>

				<div class="row">
					<div class="col-md-7">
						<div class="opac">Event created on <%= event.created.toDateString() %></div>
					</div>
					<div class="col-md-5">
						<div class="float-right">
							<a href="/events/<%= event._id %>/edit" class="btn btn-sm btn-warning">Modify<i class="fas fa-pen ml-1"></i></a>
							<form action="/events/<%= event._id %>?_method=DELETE" method="POST" class="d-inline-block">
							<button class="btn btn-sm btn-danger">Delete<i class="fas fa-trash ml-1"></i></button>
							</form>
						</div>
					</div>
				</div>
			</div>

	</div>
</div>

<%- include("./partials/footer") %>
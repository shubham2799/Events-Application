<%- include("./partials/header") %>

<% var now = new Date(); %>
<% var minDate = now.toISOString().substring(0,10); %>

<div class="container">
	<div class="center event-form">
		<h2 class="text-center mb-3">Create a New Event</h2>
		<form action="/events" method="POST">
			<div class="form-group">
				<input type="text" name="event[title]" placeholder="Event Title" class="form-control" required>
			</div>
			<div class="form-group">
				<input type="text" name="event[type]" placeholder="Event Type" class="form-control" required>
			</div>
			<div class="form-group">
				<input type="text" name="event[venue]" placeholder="Venue" class="form-control" required>
			</div>
			<div class="row mb-3">
				<div class="col-6 pr-1">
						<input type="date" name="event[date]" min="<%= minDate %>" class="form-control" required>
				</div>
				<div class="col-6 pl-1">
						<input type="time" name="event[time]" class="form-control" required>
				</div>
			</div>
			<div class="form-group">
				<textarea name="event[description]" maxlength="600" placeholder="Description (Max 600 characters) (optional)"></textarea>
			</div>
			<button class="btn btn-primary btn-block">Create Event</button>
		</form>
	</div>
</div>

<%- include("./partials/footer") %>